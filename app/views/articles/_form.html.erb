<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @article%>    
            <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, class:"form-control shadow rounded", rows:10, placeholder: "Description of article" %>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                    <% end %>
                </div>
                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
        
        <div class="mb-3">
            <%= link_to 'Cancel and return to article listing', articles_path, class: "text-primary" %> 
        </div>
    </div>
</div>