<h1 align="center"> Listing All Categories </h1>

<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>
<% @categories.each do |category| %>
    <div class="row justify-content-md-center">
        <div class="col-6">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to "#{category.name.upcase}", category_path(category), class:"text-primary" %></h5>
                    <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
                </div>
            </div>
        </div>
    </div>
<% end %>

<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>